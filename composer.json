{
  "name": "drd-plus/bestiary-story",
  "license": "proprietary",
  "type": "library",
  "description": "Story from Drd+ bestiary",
  "keywords": [
    "Drd plus",
    "rules",
    "bestiary",
    "story"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/string": "dev-master",
    "drd-plus/rules-html-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-update-cmd": [
      "cd $PWD/vendor/drd-plus/rules-html-skeleton && git checkout *.css"
    ],
    "pre-install-cmd": [
      "cd $PWD/vendor/drd-plus/rules-html-skeleton && git checkout *.css"
    ],
    "pre-autoload-dump": [
      "mkdir -p Tests",
      "echo '*' > Tests/.gitignore",
      "cp -r vendor/drd-plus/rules-html-skeleton/Tests/* Tests/",
      "cp --no-clobber vendor/drd-plus/rules-html-skeleton/phpunit.xml.dist $PWD",
      "rm -f ./images/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/images/generic ./images/generic",
      "rm -f ./css/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/css/generic ./css/generic",
      "rm -f ./js/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/js/generic ./js/generic"
    ],
    "post-update-cmd": [
      "./vendor/drd-plus/rules-html-skeleton/bin/assets --dir=css",
      "find ./cache -mindepth 2 -type f -exec rm {} +"
    ],
    "post-install-cmd": [
      "./vendor/drd-plus/rules-html-skeleton/bin/assets --dir=css",
      "find ./cache -mindepth 2 -type f -exec rm {} +",
      "wget https://pribeh.bestiar.drdplus.info --background --output-document=/dev/null --output-file=/dev/null"
    ]
  }
}
