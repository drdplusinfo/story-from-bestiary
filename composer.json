{
  "name": "drd-plus/story-from-bestiary",
  "license": "proprietary",
  "type": "library",
  "description": "Story from Drd+ bestiary",
  "keywords": [
    "Drd plus",
    "rules",
    "bestiary",
    "story"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/string": "dev-master",
    "drd-plus/rules-html-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0",
    "mockery/mockery": "^1.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-update-cmd": [
      "if [ -d ./vendor/drd-plus/rules-html-skeleton ]; then cd ./vendor/drd-plus/rules-html-skeleton && git checkout *.css; fi"
    ],
    "pre-install-cmd": [
      "if [ -d ./vendor/drd-plus/rules-html-skeleton ]; then cd ./vendor/drd-plus/rules-html-skeleton && git checkout *.css; fi"
    ],
    "pre-autoload-dump": [
      "rm -f DrdPlus/Tests/RulesSkeleton && ln -s ../../vendor/drd-plus/rules-html-skeleton/DrdPlus/Tests/RulesSkeleton DrdPlus/Tests/",
      "rm -fr ./images/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/images/generic ./images/generic",
      "rm -fr ./css/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/css/generic ./css/generic",
      "rm -fr ./js/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/js/generic ./js/generic",
      "find ./cache -mindepth 2 -type f -exec rm {} +"
    ],
    "post-update-cmd": [
      "./vendor/drd-plus/rules-html-skeleton/bin/assets --dir=css"
    ],
    "post-install-cmd": [
      "./vendor/drd-plus/rules-html-skeleton/bin/assets --dir=css",
      "wget https://pribeh.bestiar.drdplus.info --post-data=\"trial=1\" --background --output-document=- --output-file=- >> /dev/null"
    ]
  }
}
