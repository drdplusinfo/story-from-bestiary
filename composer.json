{
  "name": "drd-plus/bestiary-story",
  "license": "proprietary",
  "type": "library",
  "description": "Story from Drd+ bestiary",
  "keywords": [
    "Drd plus",
    "rules",
    "bestiary",
    "story"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/string": "dev-master",
    "drd-plus/rules-html-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "mkdir -p $PWD/Tests/",
      "cp -r $PWD/vendor/drd-plus/rules-html-skeleton/Tests/* $PWD/Tests/",
      "cp --no-clobber $PWD/vendor/drd-plus/rules-html-skeleton/favicon.ico $PWD",
      "rm -f $PWD/images/generic && ln -s $PWD/vendor/drd-plus/rules-html-skeleton/images/generic $PWD/images/generic",
      "rm -f $PWD/css/generic && ln -s $PWD/vendor/drd-plus/rules-html-skeleton/css/generic $PWD/css/generic"
    ]
  }
}
