{
  "name": "drd-plus/frontend-skeleton",
  "license": "MIT",
  "type": "library",
  "description": "Skeleton for DrD+ pages",
  "keywords": [
    "drd plus",
    "pages",
    "view",
    "frontend",
    "helper",
    "skeleton"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/",
      "Tests\\": "Tests/"
    }
  },
  "bin": [
    "bin/assets"
  ],
  "require": {
    "php": ">=7.1",
    "ext-mbstring": "*",
    "phpgt/dom": "~1.0",
    "piwik/device-detector": "^3.9",
    "tracy/tracy": "^2.4",
    "phpmailer/phpmailer": "^6.0",
    "granam/string": "^3.0",
    "granam/exceptions-hierarchy": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "~1.0",
    "roave/security-advisories": "dev-master"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "rm -f ./vendor/bin/assets && ln -s ../../bin/assets ./vendor/bin/"
    ],
    "post-update-cmd": [
      "php ./vendor/bin/assets --css --dir=css"
    ],
    "post-install-cmd": [
      "php ./vendor/bin/assets --css --dir=css"
    ]
  }
}
